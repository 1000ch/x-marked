{
  "name": "x-marked",
  "version": "0.4.0",
  "description": "Web Components which renders markdown using marked.",
  "homepage": "https://github.com/1000ch/x-marked",
  "bugs": {
    "url": "https://github.com/1000ch/x-marked/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/1000ch/x-marked.git"
  },
  "license": "MIT",
  "author": {
    "name": "Shogo Sensui",
    "email": "shogosensui@gmail.com",
    "web": "https://github.com/1000ch"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "build": "rollup --config rollup.config.js",
    "postbuild": "terser --output dist/index.js dist/index.js",
    "prepublish": "npm run build",
    "test": "jest"
  },
  "dependencies": {
    "he": "^1.2.0",
    "marked": "^1.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-typescript": "^3.0.0",
    "@types/he": "^1.1.0",
    "@types/jest": "^26.0.3",
    "@types/marked": "^1.1.0",
    "jest": "^26.0.0",
    "rollup": "^2.15.0",
    "terser": "^4.6.2",
    "ts-jest": "^26.1.0",
    "tslib": "^2.0.0",
    "typescript": "^3.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "mjs"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/test/*.test.ts"
    ]
  }
}
