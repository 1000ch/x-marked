{
  "name": "x-marked",
  "type": "module",
  "version": "0.8.0",
  "description": "Web Components which renders markdown using marked.",
  "homepage": "https://github.com/1000ch/x-marked",
  "bugs": {
    "url": "https://github.com/1000ch/x-marked/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/1000ch/x-marked.git"
  },
  "license": "MIT",
  "author": {
    "name": "Shogo Sensui",
    "email": "shogosensui@gmail.com",
    "web": "https://github.com/1000ch"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "build": "rollup --config rollup.config.js",
    "postbuild": "terser --output dist/index.js dist/index.js",
    "prepublish": "npm run build",
    "test": "jest"
  },
  "dependencies": {
    "he": "^1.2.0",
    "marked": "^14.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/he": "^1.2.3",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rollup": "^4.21.2",
    "terser": "^5.10.0",
    "ts-jest": "^29.2.5",
    "tslib": "^2.7.0",
    "typescript": "^5.5.4"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "js",
      "ts",
      "mjs"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/test/*.test.ts"
    ]
  }
}
