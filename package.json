{
  "name": "x-marked",
  "version": "0.7.0",
  "description": "Web Components which renders markdown using marked.",
  "homepage": "https://github.com/1000ch/x-marked",
  "bugs": {
    "url": "https://github.com/1000ch/x-marked/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/1000ch/x-marked.git"
  },
  "license": "MIT",
  "author": {
    "name": "Shogo Sensui",
    "email": "shogosensui@gmail.com",
    "web": "https://github.com/1000ch"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "build": "rollup --config rollup.config.js",
    "postbuild": "terser --output dist/index.js dist/index.js",
    "prepublish": "npm run build",
    "test": "jest"
  },
  "dependencies": {
    "he": "^1.2.0",
    "marked": "^3.0.7"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@rollup/plugin-typescript": "^8.2.5",
    "@types/he": "^1.1.2",
    "@types/jest": "^27.0.2",
    "@types/marked": "^3.0.1",
    "jest": "^27.2.5",
    "rollup": "^2.58.0",
    "terser": "^5.9.0",
    "ts-jest": "^27.0.5",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "js",
      "ts",
      "mjs"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/test/*.test.ts"
    ]
  }
}
